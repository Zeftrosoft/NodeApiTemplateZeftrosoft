extends ../layouts/layout_full

block content  
  body.hold-transition.login-page
    .login-box
      .login-logo
        a(href='#')
          b Zeftro
          | Soft
      .card
        .card-body.login-card-body
          p.login-box-msg Sign in to start your session
          include ../partials/flash
          form(method='POST')
            input(type='hidden', name='_csrf', value=_csrf)
            label(for="email") Email
            .input-group.mb-3
              input.form-control(type='email', name='email', id='email', placeholder='Email',  autofocus, autocomplete='email', required)
              .input-group-append
                .input-group-text
                  span.fas.fa-envelope
            label(for="password") Password
            .input-group.mb-3
              input.form-control(type='password', name='password', id='password', placeholder='Password', autocomplete='current-password', required)
              .input-group-append
                .input-group-text
                  span.fas.fa-lock
            .social-auth-links.text-center.mb-3
              button.btn.btn-block.btn-primary(type="submit")
                i
                |  Sign in